<UserControl x:Class="WpfNotecardUI.Views.ListViews.ListViewComponents.KanjiListComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfNotecardUI.Views.ListViews.ListViewComponents"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid ShowGridLines="True">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" SharedSizeGroup="TopicName"/>
            <ColumnDefinition Width="*" MinWidth="200"/>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="auto" SharedSizeGroup="NewspaperRank"/>
            <ColumnDefinition Width="auto" SharedSizeGroup="JLPTLevel" />
            <ColumnDefinition Width="auto" SharedSizeGroup="GradeLevel" />
            <ColumnDefinition Width="auto" SharedSizeGroup="Delete" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Column="0">
            <TextBlock Text="{Binding TopicName}" FontSize="32"></TextBlock>
            
        </StackPanel>
        <TextBlock  Grid.Column="1" Text="{Binding TopicDefinition}" Padding="20 10 0 0" TextWrapping="Wrap"/>
        <StackPanel Orientation="Vertical" Grid.Column="2" Margin="10 0">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Kun: "/>
                <TextBlock Text="{Binding KunReadings}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="On: "/>
                <TextBlock Text="{Binding OnReadings}"/>
            </StackPanel>
        </StackPanel>

        <TextBlock Text="{Binding GradeLevel}"  Grid.Column="6" HorizontalAlignment="Center"/>
        <TextBlock Text="{Binding NewspaperRank}" Grid.Column="4" HorizontalAlignment="Center"/>
        <TextBlock Text="{Binding JLPTLevel}" Grid.Column="5" HorizontalAlignment="Center"/>

        <CheckBox Grid.Column="6" VerticalAlignment="Center" HorizontalAlignment="Center"
            IsChecked="{Binding IsSelectedForDeletion}" >
            <CheckBox.Style>
                <Style TargetType="CheckBox">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding DataContext.IsDeleteToggled, RelativeSource={RelativeSource AncestorType=ListView}}" Value="False">
                            <Setter Property="Visibility" Value="Collapsed"></Setter>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </CheckBox.Style>
        </CheckBox>
    </Grid>
</UserControl>
